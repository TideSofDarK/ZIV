<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/ingame_ui_windows.css" />
		<include src="file://{resources}/styles/custom_game/custom_character_selection/character_selection.css" />
		<include src="file://{resources}/styles/custom_game/custom_character_selection/character_creation_ability.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/custom_character_selection/character_selection.js" />
	</scripts>
	<Panel hittest="false" class="Root">
		<Label id="GameInfo" class="CCSHeadline" text="#addoninfo" />	
		<Panel class="GenericBackground" id="Logo">
		</Panel>
		<Panel class="GenericBackground" id="CharacterList">
		</Panel>
		<Panel class="GenericBackground" id="Menu">
			<Panel class="CharacterListCard" id="LoadCharacterList" />
			<Panel hittest="false" class="CharacterListOverlap" />
		</Panel>
		<Panel id="CreationRoot" class="GenericBackground">
			<Panel id="CreationTop">
				<Label class="CCSHeadline Headline1" id="CreateCharacterLabel" text="#create_character" />	

				<Button onactivate="BackButton()" class="CloseButton BackButton" id="BackButton">
				</Button>
			</Panel>

			<Panel id="CreationMiddle" hittest="false">
				<DOTASettingsCheckbox id="HighlightEasyCharacters" text="#highlight_easy_caharacters" onactivate="HighlightEasyCharacters()" />
				<Panel id="HeroList" hittest="false">
					<Panel id="HeroList1" class="HeroListHorizontal" hittest="false">
						
					</Panel>
					<Panel id="HeroList2" class="HeroListHorizontal" hittest="false">

					</Panel>
					<Panel id="HeroList3" class="HeroListHorizontal" hittest="false">
						
					</Panel>
				</Panel>
				<Panel id="HeroRoot" hittest="false">
					<Panel id="HeroPreview" hittest="false">
					</Panel>
					<Panel id="Bio" class="MiddleBlock OpacityPositionTransitionLeft">
						<Label id="BioLabel" class="SimpleText" text=""/>
					</Panel>
					<Panel id="NameRunesLeague" class="MiddleBlock OpacityPositionTransitionRight">
						<Label class="CCSHeadline Headline2" id="CharacterNameLabel" text="#character_name" />
						<TextEntry id="CharacterNameEntry" maxchars="16" placeholder="Enter name..." />
						<Label class="CCSHeadline Headline2" id="CharacterRunesLabel" text="#character_runes" />
						<Panel id="RuneSets">
							<RadioButton group="RuneSets" class="League" id="RuneSet1" text="Rune Set A"/>
							<RadioButton group="RuneSets" class="League" id="RuneSet2" text="Rune Set B"/>
							<RadioButton checked="checked" group="RuneSets" class="League" id="RuneSet3" text="Rune Set C"/>
						</Panel>
						<Label class="CCSHeadline Headline2" id="CharacterLeagueLabel" text="#character_league" />
						<Panel id="Leagues">
							<RadioButton group="Leagues" class="League" id="League1" text="#league_standard"/>
							<RadioButton checked="checked" group="Leagues" class="League" id="League2" text="#league_competitive"/>
						</Panel>
						<Button onactivate="CreateHeroButton()" class="OKButton" id="CreateHeroButton">
							<Label id="CreateHeroButtonLabel" class="WindowLabel" text="#create_hero"/>
						</Button>
					</Panel>
				</Panel>
			</Panel>

			<Panel id="CreationBottom">
				<Label id="Abilities" class="CCSHeadline Headline1" text="#pick_character">
					
				</Label>
			</Panel>
		</Panel>
	</Panel>
</root>