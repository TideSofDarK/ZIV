<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/ingame_ui_windows.css" />
		<include src="file://{resources}/styles/custom_game/ingame_ui_colors.css" />
		<include src="file://{resources}/styles/custom_game/custom_character_selection/character_selection.css" />
		<include src="file://{resources}/styles/custom_game/custom_character_selection/character_creation_ability.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/ingame_ui_tooltips.js" />
		<include src="file://{resources}/scripts/custom_game/custom_character_selection/character_selection.js" />
	</scripts>
	<Panel class="Root" hittest="false">
		<Label id="GameInfo" class="CCSHeadline" text="#addoninfo" />	
		<Panel class="GenericBackground" id="Logo">
		</Panel>
		<Panel class="GenericBackground" id="CharacterList">
		</Panel>
		<Panel class="GenericBackground" id="Menu">
			<Panel class="CharacterListCard" id="LoadCharacterList" />
			<Panel class="CharacterListOverlap" />
		</Panel>
		<Panel id="CreationRoot" class="GenericBackground">
			<Panel id="CreationTop">
				<Label class="CCSHeadline Headline1" id="CreateCharacterLabel" text="#create_character" />	

				<Button onactivate="BackButton()" class="CloseButton BackButton" id="BackButton">
				</Button>
			</Panel>

			<Panel id="CreationMiddle">
				<DOTASettingsCheckbox id="HighlightEasyCharacters" text="#highlight_easy_caharacters" onactivate="HighlightEasyCharacters()" />
				<Panel id="HeroList">
					<Panel id="HeroList1" class="HeroListHorizontal">
						
					</Panel>
					<Panel id="HeroList2" class="HeroListHorizontal">

					</Panel>
					<Panel id="HeroList3" class="HeroListHorizontal">
						
					</Panel>
				</Panel>
				<Panel id="HeroRoot" hittest="false">
					<Panel id="HeroPreview">
					</Panel>
					<Panel id="HeroInfo" class="MiddleBlock OpacityPositionTransitionLeft">
						<Panel id="HeroOptionsTabs">
							<RadioButton group="HeroOptionsTabs" class="CCSHeadline Headline2 HeroOptionTab Activated" id="HeroOptionTab1" text="#tab_battle_info"/>
							<Label class="HeroOptionsTabSeparator Headline2" tabindex="auto" text="/" />
							<RadioButton group="HeroOptionsTabs" class="CCSHeadline Headline2 HeroOptionTab" id="HeroOptionTab2" text="#tab_bio"/>
						</Panel>
						<Panel class="CBR" />
						<Panel id="HeroBio" class="HeroInfoBlock">
							<Label id="BioLabel" class="SimpleText" text=""/>
						</Panel>
						<Panel id="HeroBattleInfo" class="HeroInfoBlock">
							<Panel id="HeroAttributes">
								<Label id="DOTA_ATTRIBUTE_STRENGTH" class="CCSHeadline HeroAttribute" text="3"/>
								<Label id="DOTA_ATTRIBUTE_AGILITY" class="CCSHeadline HeroAttribute" text="2"/>
								<Label id="DOTA_ATTRIBUTE_INTELLECT" class="CCSHeadline HeroAttribute" text="2"/>
							</Panel>
							<Panel class="CBR" />
							<Label class="CCSHeadline Headline2 HeroInfoLabel" id="CharacterPlaystyleLabel" text="#character_playstyle" tooltip="character_playstyle_Tooltip"/>
							<Label class="CCSHeadline Headline2 HeroInfoLabel" id="CharacterAttackTypeLabel" text="#character_attack_type" />
							<Label class="CCSHeadline Headline2 HeroInfoLabel" id="CharacterDamageTypeLabel" text="#character_damage_type" />
							<Label class="CCSHeadline Headline2 HeroInfoLabel" id="CharacterMovespeedLabel" text="#character_movespeed" />
						</Panel>
					</Panel>
					<Panel id="NameRunesLeague" class="MiddleBlock OpacityPositionTransitionRight">
						<Label class="CCSHeadline Headline2" id="CharacterNameLabel" text="#character_name" />
						<TextEntry id="CharacterNameEntry" maxchars="16" placeholder="Enter name..." />
						<Label class="CCSHeadline Headline2" id="CharacterPresetsLabel" text="#character_presets" />
						<Panel id="Presets">
							<RadioButton group="Presets" class="League" id="Preset1" text="Preset A"/>
							<RadioButton group="Presets" class="League" id="Preset2" text="Preset B"/>
							<RadioButton group="Presets" class="League" id="Preset3" text="Preset C"/>
						</Panel>
						<Label class="CCSHeadline Headline2" id="CharacterLeagueLabel" text="#character_league" />
						<Panel id="Leagues">
							<RadioButton group="Leagues" class="League" id="League1" text="#league_standard" tooltip="league_standard_Tooltip"/>
							<RadioButton group="Leagues" class="League" id="League2" text="#league_competitive" tooltip="league_competitive_Tooltip"/>
						</Panel>
						<Button onactivate="CreateHeroButton()" class="OKButton" id="CreateHeroButton">
							<Label id="CreateHeroButtonLabel" class="WindowLabel" text="#create_hero"/>
						</Button>
					</Panel>
				</Panel>
			</Panel>

			<Panel id="CreationBottom">
				<Label id="Abilities" class="CCSHeadline Headline1" text="#pick_character">
					
				</Label>
			</Panel>
		</Panel>
	</Panel>
</root>