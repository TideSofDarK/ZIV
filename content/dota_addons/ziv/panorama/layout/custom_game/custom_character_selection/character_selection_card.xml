<root>
	<styles>
		<!-- <include src="s2r://panorama/styles/dotastyles.vcss_c" /> -->
		<include src="file://{resources}/styles/custom_game/ingame_ui_windows.css" />
		<include src="file://{resources}/styles/custom_game/custom_character_selection/character_selection_card.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/custom_character_selection/character_selection_card.js" />
	</scripts>
	<Panel class="CardRoot" hittestchildren="true" >
		<Image id="HeroImage" src="file://{images}/custom_game/heroes/default.png"/>
		<Panel hittest="false" class="CharacterListOverlap" >

		</Panel>

		<Panel class="CardInfo">
			<Label class="CardLabel" id="HeroNameLabel" />
			<Label class="CardLabel" id="HeroLevel" />

			<Label class="CardLabel" id="FreeSlotLabel" text="#free_slot" />
		</Panel>

		<Button class="CloseButton" id="CloseButton" 
			onactivate="DeleteCharacter()" 
			onmouseover="ShowDeleteTooltip();"
			onmouseout="HideDeleteTooltip();" />
	</Panel>
</root>