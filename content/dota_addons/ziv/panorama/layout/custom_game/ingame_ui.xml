<root>
	<styles>
		<!-- <include src="s2r://panorama/styles/dotastyles.vcss_c" /> -->
		<include src="file://{resources}/styles/custom_game/ingame_ui.css" />
		<include src="file://{resources}/styles/custom_game/ingame_ui_abilities.css" />
		<include src="file://{resources}/styles/custom_game/ingame_ui_inventory.css" />
		<include src="file://{resources}/styles/custom_game/ingame_ui_windows.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/ingame_ui.js" />
		<include src="file://{resources}/scripts/custom_game/arpgctrl.js" />
	</scripts>
	<Panel class="InGameUIRoot" hittest="false">
		<Panel class="GenericBackground" id="BottomGfx" hittest="false"/>
		<Panel class="Bottom MidBottom" hittest="false">
			<Panel class="Bars" hittest="false">
				<Panel id="XPBarRoot">
					<Panel class="XPBarElement" id="XPBar1"/>
					<Panel class="XPBarElement" id="XPBar2"/>
					<Panel class="XPBarElement" id="XPBar3"/>
				</Panel>
				<Panel class="BarBackground" id="HealthPoints">
					<Panel class="Bar" id="HPBar">
						<Panel class="BarElement" id="HPBar1"/>
						<Panel class="BarElement" id="HPBar2"/>
						<Panel class="BarElement" id="HPBar3"/>
					</Panel>
					<Panel class="GlassOrb"/>
					<!-- <Label text="100/100" class="ValueLabel" id="hp" /> -->
				</Panel>
				<Panel class="BarBackground" id="SPPoints">
					<Panel class="Bar" id="SPBar">
						<Panel class="BarElement" id="SPBar1"/>
						<Panel class="BarElement" id="SPBar2"/>
						<Panel class="BarElement" id="SPBar3"/>
					</Panel>
					<Panel class="GlassOrb"/>
					<!-- <Label text="100/100" class="ValueLabel" id="sp" /> -->
				</Panel>
			</Panel>
			<Panel class="AbilityOverlayRoot">
				<Panel id="AbilityList" />
			</Panel>
			<Panel hittest="false" id="EquipList">
			</Panel>

<!-- 			<Button id="EquipmentButton" class="OKButton" onactivate="OpenEquipment()" >
				<Label text="#equipment" id="EquipmentButtonLabel" class="WindowButtonLabel" />
			</Button> -->

			<Panel class="GenericBackground" id="Separator" hittest="false"/>

			<Panel id="SideButtons" hittest="false">
				<Button id="craft_button" class="BottomButton" onactivate="OpenCraftingWindow()" />
				<Button id="fortify_button" class="BottomButton" onactivate="OpenFortifyWindow()" />
				<Button id="character_button" class="BottomButton" onactivate="OpenStatusWindow()" />
				<Button id="inventory_button" class="BottomButton" onactivate="OpenInventoryWindow()" />
				<Button id="help_button" class="BottomButton" onactivate="OpenSettingsWindow()" />
			</Panel>
		</Panel>
		<!-- <Panel class="GenericBackground" id="LeftBottomGfx" hittest="false"/> -->
		<Panel class="GenericBackground" id="BottomForegroundGfx" hittest="false"/>
	</Panel>
</root>
