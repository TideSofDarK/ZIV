<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/material_design.css" />
		<include src="file://{resources}/styles/custom_game/custom_character_selection.css" />	
		<include src="file://{resources}/styles/custom_game/ingame_ui_windows.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/material_design.js" />
		<include src="file://{resources}/scripts/custom_game/custom_character_selection.js" />
	</scripts>
	<Panel hittest="false" class="Root">
		<Label class="Headline3" text="#addoninfo" />	
		<Panel class="GenericBackground" id="Logo">
		</Panel>
		<Panel id="HeroFrames">
		</Panel>
		<Panel class="GenericBackground FlippedA" id="CharacterList">
		</Panel>
		<Panel class="GenericBackground" id="Menu">
			<Button class="MenuButton" id="CreateCharacterButton"
								onactivate="CreateCharacterButton()"
								>
				<Label class="Headline2" text="#createcharacter" />					
			</Button>
			<Button class="MenuButton" id="LoadCharacterButton"
								onactivate="LoadCharacterButton()"
								>
				<Label class="Headline2" text="#loadcharacter" />				
			</Button>
		</Panel>
		<Panel id="SelectionRoot">
			<Button class="GenericButton ChooseButton" id="ChooseButton" MaterialStyle="ChooseButton"
							onactivate="LockIn()"
							>
				<Label class="ChooseButtonLabel Headline1" MaterialStyle="ChooseButton" id="LockInLabel" text="#lockin" />
			</Button>
			<Button class="GenericButton DirButton Left" id="DirButtonLeft"
								onactivate="LeftButton()"
								>
			</Button>
			<Button class="GenericButton DirButton Right" id="DirButtonRight"
								onactivate="RightButton()"
								>
			</Button>
		</Panel>
	</Panel>
</root>