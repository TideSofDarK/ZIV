<root>
	<styles>
		<!-- <include src="s2r://panorama/styles/dotastyles.vcss_c" /> -->
		<include src="file://{resources}/styles/custom_game/ingame_ui_windows.css" />
		<include src="file://{resources}/styles/custom_game/ingame_ui_status.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/ingame_ui_status.js" />
		<include src="file://{resources}/scripts/containers/draggable.js" />
	</scripts>
	<Panel class="Window StatusRoot BasicShadow WindowAnimation WindowClosed" hittestchildren="true" draggable="true">
		<Panel class="StatusInfo">
			<Panel id="HiRes">
				<Label id="HeroNameLabel" text="Name" html="true">
				</Label>
			</Panel>
			
			<Label id="AttributesHeadline" class="Headline" text="#status_attr">
			</Label>

			<Panel class="CBR" hittest="true">
			</Panel>

			<Panel id="Attributes" hittest="true">
				<Label class="Attribute" id="Str" text="">
				</Label>
				<Label class="Attribute" id="Agi" text="">
				</Label>
				<Label class="Attribute" id="Int" text="">
				</Label>
			</Panel>

			<Panel class="CBR" hittest="true">
			</Panel>

			<Label id="StatusHeadline" class="Headline" text="#status_status">
			</Label>

			<Panel class="CBR" hittest="true">
			</Panel>

			<Panel id="status_strings" hittest="true">
				<Label class="StatusLabel" id="HP" text="500">
				</Label>
				<Label class="StatusLabel" id="MP" text="500">
				</Label>
				<Label class="StatusLabel" id="AD" text="500">
				</Label>
				<Label class="StatusLabel" id="ARMOR" text="500">
				</Label>
				<Label class="StatusLabel" id="EVASION" text="500">
				</Label>
				<Label class="StatusLabel" id="MDA" text="500">
				</Label>
				<Label class="StatusLabel" id="CTC" text="500">
				</Label>
			</Panel>

			<Panel class="CBR" hittest="true">
			</Panel>
		</Panel>

		<Panel id="Foreground" hittest="false"/>

		<Button onactivate="Toggle()" class="CloseButton" id="CloseButton">
		</Button>
	</Panel>
</root>